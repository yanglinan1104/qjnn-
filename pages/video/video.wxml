<!--pages/video/video.wxml-->
<view class='video'>
  <navigator url="/pages/video_play/videoPlay?id={{item.id}}" hover-class="none" wx:for="{{imageList}}" wx:key="*this">
    <view class='video-items'>
      <image class='video-image' src='{{item}}' mode="aspectFill"></image>
      <text class='video-title'>暖暖环游世界，满分大攻略-真人100%还原</text>
      <view class='video-play-info'>
        <view class='video-left'>
          <image class='video-play-icon' src='../../static/images/play_video.png'></image>
          <text class='play-count'>1.3万</text>
          <text class='play-text'>次播放</text>
        </view>
        <text class='play-star'>1305赞</text>
      </view>
    </view>
  </navigator>
</view>